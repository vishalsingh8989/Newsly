    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:orientation="vertical">



        <com.kepler.news.newsly.chip.Chip
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/chipScienceAndNature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText="  Global "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/science_and_nature"
            android:layout_alignParentTop="true"
            />



        <com.kepler.news.newsly.chip.Chip
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/chipPolitics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText="United States of America"
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/politics"
            android:layout_below="@+id/chipScienceAndNature"
            />


        <com.kepler.news.newsly.chip.Chip
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/chipGaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText=" United Kingdom "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/gaming"
            android:layout_below="@+id/chipPolitics">
        </com.kepler.news.newsly.chip.Chip>



        <com.kepler.news.newsly.chip.Chip
            android:id="@+id/chipSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText=" India "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@drawable/sports"
            android:layout_below="@+id/chipGaming"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            >

        </com.kepler.news.newsly.chip.Chip>



        <com.kepler.news.newsly.chip.Chip
            android:id="@+id/chipBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText=" Italy "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/business"
            android:layout_below="@+id/chipGaming"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"

            >

        </com.kepler.news.newsly.chip.Chip>




        <com.kepler.news.newsly.chip.Chip
            android:id="@+id/chipMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText="  Germany  "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/music"
            android:layout_below="@+id/chipBusiness"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            >

        </com.kepler.news.newsly.chip.Chip>



        <com.kepler.news.newsly.chip.Chip

            android:id="@+id/chipEntertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText=" France "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/entertainment"
            android:layout_below="@+id/chipBusiness"
            android:layout_toRightOf="@+id/chipMusic"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            >

        </com.kepler.news.newsly.chip.Chip>


        <com.kepler.news.newsly.chip.Chip
            android:id="@+id/chipGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText=" Canada "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/general"
            android:layout_below="@+id/chipEntertainment"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            >

        </com.kepler.news.newsly.chip.Chip>


        <com.kepler.news.newsly.chip.Chip
            android:id="@+id/chipMTechnology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_selectable="true"
            app:mcv_selectedTextColor="#ffffff"
            app:mcv_chipText=" Australia "
            app:mcv_backgroundColor="@color/d"
            app:mcv_selectedBackgroundColor="@color/b"
            app:mcv_textColor="#faf9f9"
            app:mcv_closable="true"
            app:mcv_hasIcon="true"
            app:mcv_chipIcon="@mipmap/science"
            android:layout_below="@+id/chipMusic"
            android:layout_toRightOf="@+id/chipGeneral"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>

</RelativeLayout>
