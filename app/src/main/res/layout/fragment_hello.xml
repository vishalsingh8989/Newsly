<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00282828"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kepler.news.newsly.IntroFragments.HelloFragment">


    <ImageView
        android:id="@+id/world"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/world"

        />

    <TextView
        android:id="@+id/app_name_middle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="25dp"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.08"
        android:lineSpacingMultiplier="0.6"
        android:layout_below="@+id/world"
        android:textStyle="bold"
        android:text="Newsly"
        android:textColor="@color/p"
        android:textSize="35sp"
        />


    <TextView
        android:id="@+id/details"
        android:layout_below="@+id/app_name_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/details"
        android:textSize="16sp"
        android:textColor="#2b2a2a"
        android:padding="20dp"
        />
