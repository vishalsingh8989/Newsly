<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00282828"
    >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/back_main"
        android:background="@drawable/intro_one"
        android:scaleType="centerInside"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_grad">
<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/newspaper"
    android:src="@drawable/newspaper"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    />

    <TextView
        android:layout_below="@+id/newspaper"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:id="@+id/title"
        android:text="Choose your interest"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ListView
        android:id="@+id/countrylist"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="48dp"

        android:divider="@drawable/intro_list_divider"
        android:scrollbars="none"
        android:dividerHeight="1dp"
        android:layout_below="@+id/title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>

</RelativeLayout>