<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folding_cell"
    android:background="@drawable/main_item_cell_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    folding-cell:animationDuration="500"
    folding-cell:backSideColor="#d4d4d4"
    folding-cell:additionalFlipsCount="2"
    folding-cell:cameraHeight="30">
    ​
    <RelativeLayout
        android:background="@drawable/main_item_cell_bg"
        android:id="@+id/cell_content_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/side_bar1"
            android:background="@drawable/side_color_bar_bg"
            android:layout_height="match_parent"
            android:layout_width="4dp"
            android:orientation="horizontal" />
        <TextView
            android:text="@string/title_sample"
            android:gravity="center"
            android:textSize="13dp"
            android:textAlignment="center"
            android:background="@color/transparent"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:id="@+id/divider1"
            android:layout_below="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/divider_color"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/second_view"
            android:layout_below="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <TextView
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:text="Author:  Micheal lee"
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:text="Source:  Bloomberg"
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:text="23-06-2017"
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="13dp"
            android:text="Read Full Article"
            android:id="@+id/read_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    ​
    <LinearLayout
        android:background="@drawable/main_item_cell_bg"
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/side_bar"
            android:background="@drawable/side_color_bar_bg"
            android:layout_height="match_parent"
            android:layout_width="4dp"
            android:orientation="horizontal" />
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/urltoimage"
            android:layout_marginRight="5dp"
            android:layout_weight=".31"
            android:layout_width="0dp"
            android:layout_height="100dp" />


        <LinearLayout
            android:background="@color/transparent"
            android:orientation="vertical"
            android:layout_weight=".68"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:elegantTextHeight="true"
                android:textSize="13dp"
                android:layout_weight=".75"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:padding="2dp"
                android:text="@string/title_sample"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/black" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25">
                <TextView
                    android:id="@+id/sourceMini"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="9dp"
                    android:text="Source : ABC news"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_secondry" />
                <TextView
                    android:id="@+id/publishedat"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="9dp"
                    android:text="12/02/2017"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/text_secondry" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    ​
</com.ramotion.foldingcell.FoldingCell>